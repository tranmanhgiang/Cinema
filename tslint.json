{
    "extends": ["tslint:recommended", "tslint-react", "ts-jest", "tslint-eslint-rules", "tslint-config-prettier", "tslint-react-hooks"],
    "linterOptions": {
        "exclude": ["./node_modules/**/*.ts", "index.js"]
    },
    "rules": {
        "align": [true, "parameters", "statements"],
        "ban": false,
        "class-name": true,
        "comment-format": [true, "check-space"],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [true, "spaces"],
        "interface-name": [false],
        "jsdoc-format": false,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "no-object-literal-type-assertion": false,
        "label-position": true,
        "only-arrow-functions": false,
        "max-line-length": [false],
        "no-empty-interface": false,
        "ordered-imports": false,
        "member-access": false,
        "member-ordering": [
            false,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "private-static-field",
                    "private-instance-field",
                    "private-constructor",
                    "public-constructor"
                ]
            }
        ],
        "no-var-requires": false,
        "no-any": false,
        "no-arg": true,
        "no-bitwise": true,
        "no-console": false,
        "no-consecutive-blank-lines": false,
        "no-construct": true,
        "no-debugger": false,
        "no-duplicate-variable": true,
        "no-empty": false,
        "no-eval": true,
        "no-submodule-imports": false,
        "jsx-boolean-value": false,
        "no-shadowed-variable": true,
        "no-string-literal": false,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": false,
        "no-unused-expression": true,
        "object-literal-sort-keys": false,
        "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
        "quotemark": [true, "single", "jsx-double"],
        "radix": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "switch-default": true,
        "max-classes-per-file": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "triple-equals": [true, "allow-null-check"],
        "typedef": [true, "property-declaration"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "no-invalid-template-strings": false,
        "whitespace": [true, "check-branch", "check-decl", "check-module", "check-operator", "check-separator", "check-type", "check-typecast"],
        "no-implicit-dependencies": false,
        "interface-over-type-literal": false,
        "prefer-for-of": false,
        "react-hooks-nesting": "error"
    }
}
